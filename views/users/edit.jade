extends ../user_layout

block content
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in
      |  Edit Your account
    form(action='/users/#{user.id}?_method=PUT', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='user[username]' value="#{user.username}")
      .form-group
        label What should we call you?
        input.form-control(type='text', name='user[alias]', value="#{user.alias}")
      .form-group
        label Password
        input.form-control(type='password', name='user[password]' autocomplete="off")
      button.btn.btn-warning.btn-lg(type='submit') Submit
    br
    form(action='/users/#{user.id}?_method=DELETE', method='post')
      button.btn.btn-alert.btn-lg(type='submit') Delete Account
